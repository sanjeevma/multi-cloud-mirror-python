
# examples/.env.example
# Copy to .env and update with your actual values

# =============================================================================
# Core Configuration
# =============================================================================
MAX_PARALLEL_JOBS=3
MAX_RETRIES=3
RETRY_DELAY=5
TARGET_PLATFORM=linux/amd64
DEBUG=0

# =============================================================================
# AWS ECR Configuration
# =============================================================================
ECR_MIRROR_AWS_REGIONS=ap-southeast-2,us-east-1
AWS_ACCOUNT_ID=123456789012

# AWS credentials (if not using IAM roles)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_DEFAULT_REGION=ap-southeast-2

# =============================================================================
# Google Cloud Artifact Registry Configuration
# =============================================================================
GCR_GCP_REGIONS=australia-southeast1,us-central1
GCP_PROJECT_ID=my-gcp-project

# Optional: Service account impersonation
# GCP_SERVICE_ACCOUNT=mirror-sa@my-project.iam.gserviceaccount.com

# =============================================================================
# Azure Container Registry Configuration
# =============================================================================
ACR_AZURE_REGIONS=australiaeast,eastus
AZURE_RESOURCE_GROUP=my-resource-group
AZURE_ACR_NAME_PREFIX=myorg

# Azure service principal (optional, if not using az login)
# AZURE_CLIENT_ID=your-client-id
# AZURE_CLIENT_SECRET=your-client-secret
# AZURE_TENANT_ID=your-tenant-id

# Or use specific ACR name
# AZURE_ACR_NAME=myorgacr

# =============================================================================
# JFrog Artifactory Configuration
# =============================================================================
JFROG_URL=https://myorg.jfrog.io
JFROG_USER=your-username
JFROG_TOKEN=your-api-token
JFROG_REPOSITORY=docker-local

# =============================================================================
# DigitalOcean Container Registry Configuration
# =============================================================================
DOCR_REGIONS=nyc3,sfo3
DOCR_TOKEN=dop_v1_your-token-here
DOCR_REGISTRY_NAME=my-registry

# =============================================================================
# Optional: Override image list file
# =============================================================================
# IMAGE_LIST_FILE=config/custom-list.txt
